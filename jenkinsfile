pipeline {
    agent any

    environment {
        IMAGE_NAME = "my-simple-app"
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/your-username/your-repo.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh 'docker build -t $IMAGE_NAME .'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    echo "Running tests..."
                    sh 'echo "No tests defined."'
                    // Replace with actual test commands
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                    sh 'docker run -d -p 5000:5000 --name myapp $IMAGE_NAME'
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up..."
            sh 'docker stop myapp || true && docker rm myapp || true'
        }
    }
}
